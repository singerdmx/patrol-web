<div class="container">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name),
               html: { method: :put, class: "form-signin" }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <h2 class="form-signin-heading specialTitle">更改您的密码</h2>
    <%= f.password_field :password, autofocus: true,
                         class: "form-control", placeholder: "新密码",
                         required: true %>
    <%= f.password_field :password_confirmation,
                         class: "form-control", placeholder: "确认新密码",
                         required: true %>

    <%= f.submit "更改密码", class: "btn btn-lg btn-primary btn-block" %>
  <% end %>
</div>

<%= render "users/shared/links" %>