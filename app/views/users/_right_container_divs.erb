<div class="containerDiv" id="preferencesDiv">
  <div>
    <span class="hiddenSpan" id="recordsIfNoneMatch"></span>
    <span class="hiddenSpan" id="recordsIfModifiedSince"></span>
    <span class="hiddenSpan" id="recordsCalendarUpdated">false</span>
    <div style="width: 30%" class="calendarWidgetDiv">
      <div>起始时间</div>
      <div id="startTime" class="input-append">
        <input data-format="yyyy-MM-dd" type="text"/>
            <span class="add-on">
              <i data-time-icon="icon-time" data-date-icon="icon-calendar">
              </i>
            </span>
      </div>
    </div>
    <div style="width: 30%" class="calendarWidgetDiv">
      <div>结束时间</div>
      <div id="endTime" class="input-append">
        <input data-format="yyyy-MM-dd" type="text"/>
            <span class="add-on">
              <i data-time-icon="icon-time" data-date-icon="icon-calendar">
              </i>
            </span>
      </div>
    </div>
    <div style="width: 15%" class="calendarWidgetDiv">
      <button type="button" class="btn btn-primary" style="margin-top: 16px" id="updateRecordsTableButton">
        更新数据
      </button>
    </div>
  </div>
</div>
<div class="containerDiv" id="routesDiv">
  <%if @show_full_view %>
    <div id="factories" style="display: <%= @show_full_view ? 'inline' : 'none' %>">
      <span class="hiddenSpan" id="factoriesIfNoneMatch"></span>
      <span class="hiddenSpan" id="factoriesIfModifiedSince"></span>
      <div id="factoryDetails">
        <div class="btn-toolbar" id="factoriesTreeControlButtons">
          <div class="btn-group">
            <button type="button" class="btn btn-default" id="openTree">全部展开</button>
            <button type="button" class="btn btn-default" id="collapseTree">全部合拢</button>
          </div>
          <div class="btn-group">
            <button type="button" class="btn btn-primary" id="toOtherDiv">查看选中路线</button>
          </div>
        </div>
        <div id="factoriesTree">
        </div>
      </div>
      <div id="routeListInFactory">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">路线</h3>
          </div>
          <div class="panel-body">
            <ul class="list-group" id="routeListGroupInFactory">
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div id="routes" style="display: <%= @show_full_view ? 'none' : 'inline' %>">
    <span class="hiddenSpan" id="routesIfNoneMatch"></span>
    <span class="hiddenSpan" id="routesIfModifiedSince"></span>
    <span class="hiddenSpan" id="preferencesUpdated">false</span>
    <div id="routeList">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">路线</h3>
        </div>
        <div class="panel-body">
          <ul class="list-group" id="routeListGroup">
          </ul>
        </div>
      </div>
    </div>
    <div id="routeDetails">
      <div class="btn-toolbar" id="routesTreeControlButtons">
        <div class="btn-group">
          <button type="button" class="btn btn-default" id="openTree">全部展开</button>
          <button type="button" class="btn btn-default" id="collapseTree">全部合拢</button>
        </div>
        <div class="btn-group">
          <button type="button" class="btn btn-primary" id="updatePreferences">更新我的关注</button>
        </div>
        <% if @show_full_view %>
          <div class="btn-group">
            <button type="button" class="btn btn-info" id="toOtherDiv">返回到工厂列表</button>
          </div>
        <% end %>
      </div>
      <div id="routesTree">
      </div>
    </div>
  </div>
</div>
