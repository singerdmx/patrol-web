<h1>Listing check routes</h1>

<table border="1">
  <thead>
    <tr>
      <th>description</th>
    </tr>
  </thead>

  <tbody>
    <% @check_routes.each do |check_route| %>
      <tr>
        <td><%= check_route.description %></td>
        <td><%= link_to 'Show', check_route %></td>
        <td><%= link_to 'Edit', edit_check_route_path(check_route) %></td>
        <td><%= link_to 'Destroy', check_route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Check route', new_check_route_path %>


